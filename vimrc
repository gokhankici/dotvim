"pathogen
filetype off
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

syntax on
set background=dark
colorscheme solarized

" for nerd commenter
filetype plugin on

" auto directory
set acd

" side scroll off
set siso=0

" lines
set lines=44

" scroll bars
set guioptions+=LlRrb
set guioptions-=LlRrb


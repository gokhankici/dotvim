# MY SHORTCUTS

# lock screen
#bindsym Control+$alt_key+l exec "playerctl pause", exec "i3lock -e -d -c 000000 -I 5"
bindsym Control+$alt_key+l exec "light-locker-command -l"

# logout/suspend/shutdown
bindsym $mod+Shift+E exec i3-exit
for_window [class="I3-exit" instance="i3-exit"] floating enable

# audio
#set $sink `pactl list short sinks | grep RUNNING | cut -f1`
set $sink `pactl list short sinks | cut -f1`
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink -- +5% && \
        pactl set-sink-mute $sink 0 && \
        killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink -- -5% && \
        pactl set-sink-mute $sink 0 && \
        killall -SIGUSR1 i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $sink toggle && \
        killall -SIGUSR1 i3status

# move workspace to another monitor (toggles)
bindsym $mod+m move workspace to output right

